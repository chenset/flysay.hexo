<article class="article">
    <header class="article-header text-left">
        <% if(!index){ %>
        <a class="pull-right text-muted" href="<%- url_for('/') %>">返回首页</a>
        <% } %>
        <% if(index){ %>
        <h2 class="title1"><a href="<%- url_for(post.path) %>"><%- post.title %></a></h2>
        <% }else{ %>
        <h1 class="title1"><%- post.title %></h1>
        <% } %>
    </header>
    <div class="article-meta text-muted">
        <%- date(post.date, 'm月d日, YYYY') %>
        <b class="gap">/</b>
        <%- list_tags(post.tags, {
            show_count: false,
            style: '',
            class: 'text-muted article-tag'
        }) %>
    </div>
    <% if(is_post()){ %>
    <div class="article-directory">
        <span class="pull-right article-directory-hash">#</span>
        <%- toc(post.content) %>
    </div>
    <% } %>
    <div class="article-content">
        <%- post.content %>
    </div>

    <% if(!index){ %>
    <footer class="article-footer text-muted text-right">
        Link: <%- post.permalink %>
    </footer>
    <% } %>
</article>

