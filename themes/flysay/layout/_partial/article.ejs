<article class="article">
    <header class="article-header text-left">
        <h1 class="title2"><%- titlecase(post.title) %></h1>
    </header>
    <div class="article-meta text-muted">
        <%- date(post.date, 'M月D日, YYYY') %>
        <b class="gap">/</b>
        <%- list_tags(post.tags, {
            show_count: false,
            style: '',
            class: 'text-muted article-tag'
        }) %>
    </div>

    <% if(toc(post.content)){ %>
    <div class="article-directory">
        <span class="toc-icon">#</span>
        <%- toc(post.content) %>
    </div>
    <% } %>
    <div><!-- 非多余! -->
        <div class="article-content">
            <%- post.content %>
        </div>
    </div>
</article>
<% if (post.comments){ %>
<div id="disqus_thread"></div>
<script>
    var disqus_config = function () {
        this.page.url = '<%= page.permalink %>';
        this.page.identifier = '<%= post.layout %>-<%= post.slug %>';
    };

    (function () {
        var d = document, s = d.createElement('script');

        s.src = '//flysay.disqus.com/embed.js';

        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
    })();
</script>
<% } %>